@model AutoFull.Models.Auto

@{
    ViewData["Title"] = "Edit Auto";
}

<h3 class="text-center mb-4">Edit new auto</h3>
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit" asp-controller="Marca">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">Цена</label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Описания</label>
                <textarea asp-for="Description" cols="30" rows="5" class="form-control" style="resize: none;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Color" class="control-label">Цвет</label>
                <input asp-for="Color" class="control-label"/>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MarcaId" class="control-label">Марка машин</label>
                <select asp-for="MarcaId" class="form-control" asp-items="ViewBag.MarcaId"></select>
            </div>

            <div class="d-flex justify-content-center">
                <input type="submit" class="btn btn-outline-success" value="Create">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Marca"></a>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}